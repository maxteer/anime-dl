{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
